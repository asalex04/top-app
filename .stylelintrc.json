{
  "extends": [
    "stylelint-config-standard"
  ],
  "plugins": [
    "stylelint-order"
  ],
  "rules": {
    "indentation": [
      "tab"
    ],
    "color-hex-case": "upper"
  },
  "overrides": [{
    "files": "**/*.module.css",
    "rules": {
      "selector-class-pattern": "class selector to be kamel-case || kebab-case"
    }
  }]
}